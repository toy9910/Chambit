<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CarListActivity">

    <!-- Header 섹션 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edge_design"
        android:orientation="horizontal"
        android:padding="4dp">

        <!-- TextView: 목록 -->
        <TextView
            android:id="@+id/mok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:padding="10dp"
            android:text="목록"
            android:textColor="@color/blue"
            android:layout_alignParentLeft="true" />

        <!-- TextView: 목록 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="내부차량"
            android:textColor="@color/blue"
            android:layout_alignParentLeft="true" />

    </LinearLayout>
    <!-- 끝 : Header 섹션 -->
    <!-- 분류 및 검색 섹션 -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edge_design"
        android:columnCount="2"
        android:padding="12dp"
        android:rowCount="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_columnWeight="2"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <!-- 점 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="."
                android:textStyle="bold" />

            <!-- 분류 타이틀 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="차량번호" />

            <EditText
                android:id="@+id/edit_inquiry_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=" "
                android:background="@drawable/edittext_design"
                android:inputType="text" />

        </LinearLayout>

        <!-- 이름 -->
        <LinearLayout
            android:id="@+id/input_inquiry_type"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="."
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:layout_marginRight="10dp" />

            <EditText
                android:id="@+id/edit_inquiry_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=" "
                android:background="@drawable/edittext_design"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_columnWeight="2"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <!-- 점 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="."
                android:textStyle="bold" />

            <!-- 분류 타이틀 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="전화번호" />

            <EditText
                android:id="@+id/edit_inquiry_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=" "
                android:background="@drawable/edittext_design"
                android:inputType="text" />

        </LinearLayout>

        <!-- Button: 검색 -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_columnWeight="1">

            <Button
                android:id="@+id/btn_search"
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/backgroundBlue"
                android:padding="0dp"
                android:text="검색"
                android:textStyle="bold"
                />

        </RelativeLayout>
    </GridLayout>

    <!-- 테이블 섹션 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edge_design"
        android:orientation="vertical"
        android:padding="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="차량 번호"
                android:textStyle="bold"
                android:layout_weight="1"
                android:background="@drawable/table_header_design"
                android:padding="8dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="차주"
                android:textStyle="bold"
                android:layout_weight="1"
                android:background="@drawable/table_header_design"
                android:padding="8dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="연락처"
                android:textStyle="bold"
                android:layout_weight="1"
                android:background="@drawable/table_header_design"
                android:padding="8dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="주소"
                android:textStyle="bold"
                android:layout_weight="1"
                android:background="@drawable/table_header_design"
                android:padding="8dp"
                android:gravity="center"/>

        </LinearLayout>

        <!-- 테이블 바디 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 컬럼 세로선 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/table_column_design" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/table_column_design" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/table_column_design" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/table_column_design" />

            </LinearLayout>
            <!-- 끝 : 컬럼 세로선 -->

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:id="@+id/res_recycler"/>

        </FrameLayout>
        <!-- 끝 : 테이블 바디 -->

    </LinearLayout>



    <!-- Button : 더보기 -->
    <Button
        android:id="@+id/btn_more_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="4dp"
        android:text="더보기" />

</LinearLayout>